<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="380dp"
    android:background="@color/design_default_color_secondary"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingBottom="11dp"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/txtTitleW"
        android:layout_margin="21dp"
        android:text="Update Details" />

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="220dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="300dp"
            android:layout_height="fill_parent"
            android:background="@color/design_default_color_secondary"
            android:paddingLeft="6dp"
            android:paddingRight="21dp"
            android:paddingBottom="11dp"
            android:orientation="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtNameW"
                android:hint="Enter name"
                android:background="@color/white"
                android:padding="11dp"
                android:layout_marginBottom="11dp"
                android:inputType="text"/>

            <AutoCompleteTextView
                android:id="@+id/locAtvW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:hint="Select your address"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                android:padding="11dp"
                android:layout_marginBottom="11dp"

                />

            <AutoCompleteTextView
                android:id="@+id/catAtvW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:hint="Select your category"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                android:padding="11dp"
                android:layout_marginBottom="11dp"

                />

<!--            <Spinner-->
<!--                android:id="@+id/spinner_locw"-->
<!--                android:layout_width="272dp"-->
<!--                android:background="@color/white"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_marginBottom="11dp"/>-->

<!--            <Spinner-->
<!--                android:id="@+id/spinner_catw"-->
<!--                android:layout_width="272dp"-->
<!--                android:background="@color/white"-->
<!--                android:layout_height="48dp"-->
<!--                android:layout_marginBottom="11dp"/>-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtDesW"
                android:hint="Enter description"
                android:background="@color/white"
                android:padding="11dp"
                android:layout_marginBottom="11dp"
                android:inputType="text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtQuanW"
                android:hint="Experience"
                android:background="@color/white"
                android:padding="11dp"
                android:layout_marginBottom="11dp"
                android:inputType="text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtPhoneW"
                android:hint="Enter contact"
                android:background="@color/white"
                android:padding="11dp"
                android:layout_marginBottom="11dp"
                android:inputType="phone"/>


        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnActionW"
        android:backgroundTint="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:textColor="@color/design_default_color_secondary"
        />
</LinearLayout>