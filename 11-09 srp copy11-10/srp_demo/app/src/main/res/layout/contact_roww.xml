<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:translationZ="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius = "7dp"
        app:cardUseCompatPadding= "true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingTop="20dp"
            >

            <Button
                android:id="@+id/menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_more_vert_24"
                android:visibility="invisible"
                android:layout_alignParentRight="true"/>

            <ImageView
                android:id="@+id/pimgW"
                android:layout_width="152dp"
                android:layout_height="136dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:contentDescription="Profile image"
                tools:srcCompat="@drawable/pimg" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llRowW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/WpNameW"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/WpNameiW"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/WpAddW"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Work Address"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/WpAddiW"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Work Address"
                        android:textSize="15sp"
                        android:textStyle="italic" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/WCatW"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/WCatiW"
                        android:layout_width="75pt"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="15sp"
                        android:textStyle="italic" />

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/WDesW"
                    android:layout_width="75pt"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/WDesiW"
                    android:layout_width="75pt"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/WQuaW"
                    android:layout_width="75pt"
                    android:layout_height="wrap_content"
                    android:text="Experience"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/WQuaiW"
                    android:layout_width="75pt"
                    android:layout_height="wrap_content"
                    android:text="Quantity"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/phoneW"
                    android:layout_width="75pt"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/phoneiW"
                    android:layout_width="75pt"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </LinearLayout>




            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>